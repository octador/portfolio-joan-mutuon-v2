---
import "../styles/global.css"
interface Props {
	title: string;
}
const { title } = Astro.props;

---

<!doctype html>
<html lang="fr">
	<head>
		

 <!-- Icônes et Manifeste -->
 <link rel="apple-touch-icon" sizes="180x180" href="/favicon/apple-touch-icon.png">
 <link rel="icon" type="image/png" sizes="192x192" href="/favicon/android-chrome-192x192.png">
 <link rel="icon" type="image/png" sizes="512x512" href="/favicon/android-chrome-512x512.png">
 <link rel="icon" type="image/png" sizes="32x32" href="/favicon/favicon-32x32.png">
 <link rel="icon" type="image/png" sizes="16x16" href="/favicon/favicon-16x16.png">
 <link rel="manifest" href="/favicon/site.webmanifest">
 <link rel="mask-icon" href="/favicon/safari-pinned-tab.svg" color="#5bbad5">
 <meta name="msapplication-TileColor" content="#603cba">
 <meta name="theme-color" content="#ffffff">

 <!-- Méta Tags -->
 <meta charset="UTF-8" />
 <meta name="description" content="Découvrez mon portfolio ! Je suis Joan Mutuon, développeur web et mobile fullstack junior en quête d'une alternance en conception-développement d'applications web. Explorez mes projets et contactez-moi pour des solutions digitales innovantes !" />
 <meta name="viewport" content="width=device-width, initial-scale=1" />
 <meta name="generator" content={Astro.generator} />
 <meta property="og:title" content="{title}" />
 <meta property="og:description" content="Découvrez mon portfolio ! Je suis Joan Mutuon, développeur web et mobile fullstack junior en quête d'une alternance en conception-développement d'applications web. Explorez mes projets et contactez-moi pour des solutions digitales innovantes !" />
 <meta property="og:image" content="/favicon/apple-touch-icon.png" />
 <meta property="og:url" content="https://portfolio-joan-mutuon-developpeur-web.netlify.app" />
 <meta property="og:type" content="website" />


 <!-- Préconnexion et Feuilles de Style -->
 <link rel="preconnect" href="https://fonts.googleapis.com" />
 <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
 <link
   href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap"
   rel="stylesheet"
 />

 <!-- Balise Canonique -->
 <link rel="canonical" href="https://portfolio-joan-mutuon-developpeur-web.netlify.app" />


 <!-- Script Externe -->
 <script src="https://code.iconify.design/iconify-icon/2.1.0/iconify-icon.min.js"></script>

 <script type="application/ld+json">
	{
	  "@context": "https://schema.org",
	  "@type": "Person",
	  "name": "Joan Mutuon",
	  "jobTitle": "Développeur Web et Mobile Fullstack",
	  "description": "Découvrez mon portfolio ! Je suis Joan Mutuon, développeur web et mobile fullstack junior en quête d'une alternance en conception-développement d'applications web. Explorez mes projets et contactez-moi pour des solutions digitales innovantes !",
	  "url": "https://portfolio-joan-mutuon-developpeur-web.netlify.app"
	}
	</script>
	

		<title>{title}</title>
	</head>
	<body class="flex flex-col">

			<slot/>
	</body>
</html>
